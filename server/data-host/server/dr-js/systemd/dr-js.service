[Unit]
Description=dr-js server
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=8

User=root
ExecStartPre=/bin/bash /mnt/data-link/server/[systemd]test-data-link.sh
ExecStart=/bin/bash /mnt/data-link/server/dr-js/systemd/start.sh
ExecStop=/bin/bash /mnt/data-link/server/dr-js/systemd/stop.sh

[Install]
WantedBy=multi-user.target
